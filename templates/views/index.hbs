<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      integrity="sha512-PgQMlq+nqFLV4ylk1gwUOgm6CtIIXkKwaIHp/PAIWHzig/lKZSEGKEysh0TCVbHJXCLN7WetD8TFecIky75ZfQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="./style.css" />
    <link
      rel="shortcut icon"
      href="https://raw.githubusercontent.com/thapatechnical/webproject/master/public/images/logo.png"
      type="image/png"
    />
    <title>Static Web</title>
  </head>
  <body style="max-height: 100vh;">
    
    {{>navbar}}
    <!-- Home Page Content -->

    <div class="container-fluid header" >
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="row">
            <div class="col-md-6 col-12 header-left">
              <p>Welcome to weather app</p>
              <h1 class="text-capitalize">
                Get the latest
                <span style="color: rgb(0, 217, 255)">weather</span>
                info of your city
              </h1>
              <a href="/weather"><button
                  class="text-uppercase"
                >checknow</button></a>
            </div>
            <div class="col-md-6 col-12 header-right">
              <div
                id="carouselExampleSlidesOnly"
                class="carousel slide"
                data-bs-ride="carousel"
              >
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img
                      src="https://raw.githubusercontent.com/thapatechnical/webproject/master/public/images/bg1.png"
                      class="d-block w-100"
                      alt="bg-1"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      src="https://raw.githubusercontent.com/thapatechnical/webproject/master/public/images/bg2.png"
                      class="d-block w-100"
                      alt="bg-2"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      src="https://raw.githubusercontent.com/thapatechnical/webproject/master/public/images/bg3.png"
                      class="d-block w-100"
                      alt="bg-3"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{>footer}}
    <!-- bootstrap-js-cdn -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"
    ></script>
  </body>
</html>